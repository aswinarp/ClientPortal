@model Portal.Models.Helper

@{
    ViewData["Title"] = "Login Page";
}
<div class="container">
    <div class="row">
        <div class="col-sm-4">
            <div class="card card-signin my-5">
                <div class="card-body">
                    <h5 class="card-title text-center">Sign In</h5>
                    <form class="form-signin" asp-controller="Home" asp-action="Login">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <h5 class="text-danger">@ViewBag.Message</h5>
                        <label asp-for="UserName" class="control-label"></label>
                        <div class="form-label-group">
                            <input asp-for="UserName" id="inputEmail" class="form-control" required autofocus>
                            <span asp-validation-for="UserName" class="text-danger"></span>

                        </div>
                        <label asp-for="Password" class="control-label"></label>
                        <div class="form-label-group">
                            <input asp-for="Password" type="password" id="inputPassword" class="form-control" required>
                            <span asp-validation-for="Password" class="text-danger"></span>

                        </div>
                        <button class="btn btn-lg btn-primary btn-block text-uppercase" type="submit">Log in</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

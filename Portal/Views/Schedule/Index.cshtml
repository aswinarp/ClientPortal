@model Portal.Models.Helper
@{
    ViewData["Title"] = "Schedule Creation";
}

<h4 class="text-danger">@ViewBag.Message</h4>
<div class="row">
    <div class="col-md-4">        
        <form asp-controller="Schedule" asp-action="Schedule">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                @if (ViewBag.Message == "")
                {
                <h3>Please Enter start date</h3>
                }
                <br />
                <input asp-for="StartDate" class="form-control" />
                <span asp-validation-for="StartDate" class="text-danger"></span>
                <br />
                <input type="submit" value="Generate Schedule" class="btn btn-outline-dark" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
